<Window x:Class="NGINXCP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NGINXCP"
        mc:Ignorable="d"
        Title="NGINXSCP" Height="220" Width="300" WindowStyle="ToolWindow" ResizeMode="CanMinimize" Background="#FF101010" Closing="OnClosing" Icon="/icon.ico">
    <Grid Height="220">
        <Button Content="Start" HorizontalAlignment="Center" Margin="0,74,0,0" VerticalAlignment="Top" Width="250" Height="20" Background="#FF1D1D1D" Foreground="White" Click="StartNginx"/>
        <Button Content="Stop" HorizontalAlignment="Center" VerticalAlignment="Top" Width="250" Height="20" Margin="0,98,0,0" Background="#FF1D1D1D" Foreground="White" Click="StopNginx"/>
        <Button Content="Reload Conf" HorizontalAlignment="Center" Margin="0,123,0,0" VerticalAlignment="Top" Width="250" Height="20" Background="#FF1D1D1D" Foreground="White" Click="ReloadNginx"/>
        <Label Content="NGINX Simple Control Panel v0.1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="250" Height="25" HorizontalContentAlignment="Center" Foreground="White"/>
        <Label Content="Non affilated to NGINX" HorizontalAlignment="Center" Margin="0,158,0,0" VerticalAlignment="Top" Width="250" Height="14" HorizontalContentAlignment="Center" FontSize="8" Padding="5,0,5,0" BorderBrush="White" Foreground="White"/>

    </Grid>
</Window>
